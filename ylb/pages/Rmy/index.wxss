/* pages/Rmy/index.wxss */
.header{
  height:240px;
  position: relative;
  width:100%;

}
.header .imgBg,.header .pic,.header .phone,.header .info{
  position: absolute;
  z-index: 1;
}
.header .mask{
  background:#d23023;
  opacity:0.9;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.header .imgBg{
  width:96px;
  height:96px;
  border-radius:50%;
  background:#EE5D55;
  top:50px;
  left:50%;
  margin-left:-48px;

}
.header .pic{
  width:80px;
  height:80px;
  border-radius:50%;
  margin:8px;

}
.header .phone,.header .info{
  
  width:100%;
  text-align:center;
  color:#fff;
}
.header .phone{
  font-size:16px;
  top:160px;
}
.header .info{
  font-size:14px;
  top: 190px;
}
.box{
  background:#fff;
  margin:5px 10px;

}
.box .item{
  
  height:50px;
  line-height:50px;
  font-size:20px;
}
.box .item image{
  width:22px;
  height:22px;
  margin:14px;
  float:left;
}
